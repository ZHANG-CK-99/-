{
    "compilerOptions": {
      "target": "esnext",
      "useDefineForClassFields": true,
      "module": "esnext",
      "moduleResolution": "node",
      "strict": true,
      "jsx": "preserve",
      "sourceMap": true,
      "resolveJsonModule": true,
      "isolatedModules": true,
      "esModuleInterop": true,
      "lib": [
        "esnext",
        "dom"
      ],
      "skipLibCheck": true,
      "baseUrl": ".",
      "paths": {
        "@/*": [
          "src/*"
        ]
      }
    },
    "exclude": [ // 要排除的文件
      "node_modules",
      "**/node_modules/*"
    ],
    "include": [
      "./src/auto-imports.d.ts",
      "./src/components.d.ts",
      "src/**/*.js",
      "src/**/*.ts",
      "src/**/*.d.ts",
      "src/**/*.tsx",
      "src/**/*.vue"
    ]
  }